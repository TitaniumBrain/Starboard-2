{% extends "base.jinja" %}

{% block content %}
    <div class="flex-1 flex flex-col md:flex-row">
        <div class="flex-none">
            <div class="hidden md:flex" style="height: 100%;">
                <ul class="menu compact p-2 bg-neutral-focus flex-1">
                    <li class="menu-title">
                        <span>{{ guild.name }}</span>
                    </li>
                    <li class="mt-1"><a href="{{ url_for('servers') }}">Back</a></li>
                    <li class="mt-1">
                        <a href="{{ url_for('server_general', guild_id=guild.id) }}" class="{% if tab=='general' %}active{% endif %}">
                            General
                        </a>
                    </li>
                    <li class="mt-1">
                        <a href="{{ url_for('server_starboards', guild_id=guild.id) }}" class="{% if tab=='starboards' %}active{% endif %}">
                            Starboards
                        </a>
                    </li>
                    <li class="mt-1">
                        <a href="{{ url_for('server_autostar', guild_id=guild.id) }}" class="{% if tab=='autostar' %}active{% endif %}">
                            AutoStar
                        </a>
                    </li>
                </ul>
            </div>
            <div class="block md:hidden" style="width: 100%">
                <ul class="menu compact p-2 bg-neutral-focus horizontal" style="width: 100%;">
                    <li class="ml-1"><a href="{{ url_for('servers') }}">Back</a></li>
                    <li class="ml-1">
                        <a href="{{ url_for('server_general', guild_id=guild.id) }}" class="{% if tab=='general' %}active{% endif %}">
                            General
                        </a>
                    </li>
                    <li class="ml-1">
                        <a href="{{ url_for('server_starboards', guild_id=guild.id) }}" class="{% if tab=='starboards' %}active{% endif %}">
                            Starboards
                        </a>
                    </li>
                    <li class="ml-1">
                        <a href="{{ url_for('server_autostar', guild_id=guild.id) }}" class="{% if tab=='autostar' %}active{% endif %}">
                            AutoStar
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="flex-1">
            {% block dashboardcontent %}
            {% endblock %}
        </div>
    </div>
{% endblock %}